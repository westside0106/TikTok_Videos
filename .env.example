# ============================================================
# TikTok Video Clip Generator - Configuration
# ============================================================
# Copy this file to .env and fill in your values:
#   cp .env.example .env

# ----------------------------------------------------------
# REQUIRED: Get this from @BotFather on Telegram
# ----------------------------------------------------------
TELEGRAM_BOT_TOKEN=your_bot_token_here

# ----------------------------------------------------------
# Whisper model size for transcription
# tiny   = fastest (~32x realtime on CPU), less accurate
# base   = balanced (~16x realtime on CPU) ‚Üê recommended
# small  = more accurate (~8x realtime on CPU)
# medium = best quality (~4x realtime on CPU), slow
# ----------------------------------------------------------
WHISPER_MODEL=base

# ----------------------------------------------------------
# Clip generation settings
# ----------------------------------------------------------
MAX_CLIPS_PER_VIDEO=3       # How many clips to create (1-5)
CLIP_MIN_DURATION=15        # Minimum clip length in seconds
CLIP_MAX_DURATION=60        # Maximum clip length in seconds

# ----------------------------------------------------------
# File paths
# ----------------------------------------------------------
OUTPUT_DIR=./output         # Where finished clips are stored
TEMP_DIR=./tmp              # Temporary files during processing

# ----------------------------------------------------------
# Processing limits
# ----------------------------------------------------------
MAX_VIDEO_DURATION=3600     # Max video length in seconds (1 hour)
MAX_FILE_SIZE_MB=500        # Max download size in MB

# ----------------------------------------------------------
# Highlight detection weights (should sum to 1.0)
# ----------------------------------------------------------
AUDIO_ENERGY_WEIGHT=0.4     # Weight for audio energy peaks
KEYWORD_WEIGHT=0.3          # Weight for interesting keywords in transcript
SCENE_CHANGE_WEIGHT=0.3     # Weight for scene changes

# ----------------------------------------------------------
# Advanced / optional
# ----------------------------------------------------------
LOG_LEVEL=INFO              # DEBUG, INFO, WARNING, ERROR
WHISPER_BEAM_SIZE=5         # Reduce to 1 for 2x speed, lower accuracy
